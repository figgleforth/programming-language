`=> "Hi, World!"
Hello {
	subject;

	new { subject;
		./subject = subject
	}

	output {;
		"Hi, |subject|!"
	}
}

Hello('World').output()

`=> "figgleforth/programming-language"
Repo {
	user;
	name;

	`"new" is reserved for constructors
	new { user, name;
		./user = user
		./name = name
	}

	to_s {;
		"|user|/|name|"
	}
}

Repo('figgleforth', 'programming-language').to_s()

