@use 'ore/html.ore'
@use 'ore/server.ore'

Layout | Html {
	css_filter = 'invert()'

	render { ->
		[Head(Title("Test App")), Body(children)]
	}
}

Header | Dom {
	css_color = 'green'

	render { ->
		[H3("|children| Page"), A("/", "home"), Br(), A("/about", "about"), Br()]
	}
}

App_One {
	| Server

	get:// { ->
		Layout([Header("Home"), Span("This is the home page")])
	}

	get://about { ->
		Layout([Header("About"), Span("This is the about page")])
	}
}

@start App_One()
